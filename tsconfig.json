{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // necessary if you dont want to put /** @jsxImportSource @emotion/react */ in every file's first line
    // if this ends up being a problem for any reason, you can remove this line and add the pragma to every file
    "jsxImportSource": "@emotion/react",

    /* Linting */
    "strict": true,
    "jsx": "react-jsx", // use "react-jsx"
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}